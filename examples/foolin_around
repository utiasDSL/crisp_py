"""Try to follow a "figure eight" target on the yz plane."""

# %%
import matplotlib.pyplot as plt
import numpy as np

from crisp_py.robot import Robot

left_arm = Robot(namespace="")
left_arm.wait_until_ready()

# %%
print(left_arm.end_effector_pose)
print(left_arm.joint_values)

# %%
print("Going to home position...")
left_arm.home()
homing_pose = left_arm.end_effector_pose.copy()

# params = [
#     ("task.k_pos_x", 400.0),
#     ("task.k_pos_y", 400.0),
#     ("task.k_pos_z", 400.0),
#     ("task.k_rot_x", 45.0),
#     ("task.k_rot_y", 45.0),
#     ("task.k_rot_z", 45.0),
#     ("task.d_pos_x", 10.0),
#     ("task.d_pos_y", 10.0),
#     ("task.d_pos_z", 10.0),
#     ("task.d_rot_x", 5.0),
#     ("task.d_rot_y", 5.0),
#     ("task.d_rot_z", 5.0),
# ]
# left_arm.cartesian_controller_parameters_client.set_parameters(params)


# %%
# Paremeters for the circle
radius = 0.1  # [m]
center = np.array([0.4, 0, 0.4])
ctrl_freq = 50.0
sin_freq_y = 0.25  # rot / s
sin_freq_z = 0.125  # rot / s
sin_freq_x = 0.15
max_time = 8.0
speed = 0.25

# %%
left_arm.controller_switcher_client.switch_controller("cartesian_impedance_controller")
left_arm.cartesian_controller_parameters_client.load_param_config(
    file_path="config/control/default_operational_space_controller.yaml"
    # file_path="config/control/clipped_cartesian_impedance.yaml"
    # file_path="config/control/default_cartesian_impedance.yaml"
)


# %%
# The move_to function will publish a pose to /target_pose while interpolation linearly
left_arm.move_to(position=center, speed=0.15)

# %%
# The set_target will directly publish the pose to /target_pose
ee_poses = []
target_poses = []
ts = []

print("Starting to draw a circle...")
t = 0.0
target_pose = left_arm.end_effector_pose.copy()
rate = left_arm.node.create_rate(ctrl_freq)
print(target_pose.translation[0])

while t < max_time:
    x = center[0] #+ radius * np.sin((2*np.pi *sin_freq_x * t) - ((np.pi)/2))
    y = center[1] + radius * np.sin((2 * np.pi * sin_freq_x * t) - ((np.pi)/2))
    z = center[2] + radius * np.sin(2 * np.pi * sin_freq_x * t)
    target_pose.translation = np.array([x, y, z])

    left_arm.set_target(pose=target_pose)

    rate.sleep()

    ee_poses.append(left_arm.end_effector_pose.copy())
    target_poses.append(left_arm._target_pose.copy())
    ts.append(t)

    t += 1.0 / ctrl_freq

t = 0.0
#x movement
while t < max_time:
    current_pose = left_arm.end_effector_pose.copy()
    current_pose.translation[0] += 0.1*speed
    left_arm.set_target(pose=current_pose)

    rate.sleep()
    ee_poses.append(left_arm.end_effector_pose.copy())
    target_poses.append(left_arm._target_pose.copy())
    ts.append(t)
    t += 1.0 /ctrl_freq



while t < max_time + 1.0:
    # Just wait a bit for the end effector to settle

    rate.sleep()

    ee_poses.append(left_arm.end_effector_pose.copy())
    target_poses.append(left_arm._target_pose.copy())
    ts.append(t)

    t += 1.0 / ctrl_freq


print("Done drawing a circle!")


# %%
y_t = [target_pose_sample.translation[1] for target_pose_sample in target_poses]
z_t = [target_pose_sample.translation[2] for target_pose_sample in target_poses]

# %%
# === Normal params ===
y_ee = [ee_pose.translation[1] for ee_pose in ee_poses]
z_ee = [ee_pose.translation[2] for ee_pose in ee_poses]

# %%
fig, ax = plt.subplots(1, 2, figsize=(10, 5))
ax[0].plot(y_ee, z_ee, label="current")
ax[0].plot(y_t, z_t, label="target", linestyle="--")
ax[0].set_xlabel("$y$")
ax[0].set_ylabel("$z$")
# ax[0].legend()
ax[1].plot(ts, z_ee, label="current")
ax[1].plot(ts, z_t, label="target", linestyle="--")
ax[1].set_xlabel("$t$")
ax[1].legend()

for a in ax:
    a.grid()

fig.tight_layout()

plt.show()

# %%

print("Going back home.")
left_arm.home()

# %%
left_arm.shutdown()
